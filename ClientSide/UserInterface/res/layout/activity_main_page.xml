<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/loginbackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/main_page_welcomeTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
        android:layout_gravity="center_horizontal"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/xtraveler" />

    <TextView
        android:id="@+id/peopleinterest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="People you may interest"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/people1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:text="James"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/people2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bilibili"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/placeinterest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Place you may interest"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/place1"
            android:layout_width="fill_parent"
            android:layout_height="200px"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/place2"
            android:layout_width="fill_parent"
            android:layout_height="200px"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/find_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Find City" />

    <Button
        android:id="@+id/main_to_personal_page"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Personal Page" />

</LinearLayout>