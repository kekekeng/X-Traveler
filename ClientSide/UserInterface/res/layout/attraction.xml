<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/loginbackground"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Attraction_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Attraction_name"
        android:layout_gravity="center_vertical"
        android:textSize="35sp" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/AttractionImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/AttractionDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Attraction_detailllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllllll"
                android:textSize="25sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <RatingBar
        android:id="@+id/attractionratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/AddtoWishList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AddtoWishList" />

    <Button
        android:id="@+id/AddtoVisitedList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AddtoVisitedList" />

    <TextView
        android:id="@+id/attractionmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp" >
    </TextView>

</LinearLayout>